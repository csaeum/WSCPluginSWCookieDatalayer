<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
           http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="false"/>

        <!-- DataLayerBuilder Service -->
        <service id="WSC\SWCookieDataLayer\Service\DataLayerBuilder"/>

        <!-- ConsentService -->
        <service id="WSC\SWCookieDataLayer\Service\ConsentService"/>

        <!-- JitsuClient Service -->
        <service id="WSC\SWCookieDataLayer\Service\JitsuClient"/>

        <!-- DataLayerSubscriber -->
        <service id="WSC\SWCookieDataLayer\Subscriber\DataLayerSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- JitsuTrackingSubscriber -->
        <service id="WSC\SWCookieDataLayer\Subscriber\JitsuTrackingSubscriber">
            <argument type="service" id="WSC\SWCookieDataLayer\Service\JitsuClient"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="product.repository"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- Twig Extension for Product Data JSON -->
        <service id="WSC\SWCookieDataLayer\Twig\ProductDataExtension">
            <argument type="service" id="request_stack"/>
            <tag name="twig.extension"/>
        </service>
    </services>
</container>
